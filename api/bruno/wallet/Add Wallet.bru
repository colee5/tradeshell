meta {
  name: Add Wallet
  type: http
  seq: 4
}

post {
  url: {{baseUrl}}/wallet/add
  body: json
  auth: none
}

body:json {
  {
    "privateKey": "{{privateKey}}",
    "name": "{{walletName}}",
    "setActive": true
  }
}

tests {
  test("Status code is 201", function() {
    expect(res.status).to.equal(201);
  });
  
  test("Response has address", function() {
    expect(res.body).to.have.property("address");
    bru.setEnvVar("walletAddress", res.body.address);
  });
}
