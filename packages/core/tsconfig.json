{
	"compilerOptions": {
		"target": "ES2023",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"resolvePackageJsonExports": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
